
@{

    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div ng-app="myapp">
    <div ng-controller="StudentCtrl">
        <table class="table table-striped table-bordered table-hover table-checkable datatable">
            <thead class="grid-top-panel">
            <tr>
                <th>StudentID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Address</th>
            </tr>
            </thead>
            <tbody>
            <tr ng-repeat="dataModel in students track by $index">
                <td>{{dataModel.StudentID}}</td>
                <td>{{dataModel.FirstName}}</td>
                <td>{{dataModel.LastName}}</td>
                <td>{{dataModel.Email}}</td>
                <td>{{dataModel.Address}}</td>
            </tr>
            </tbody>
        </table>
    </div>
</div>
<script src="~/Scripts/angular.min.js"></script>
<script src="~/ScriptsNg/app.js"></script>
<script src="~/ScriptsNg/StudentController.js"></script>
<script src="~/ScriptsNg/StudentService.js"></script>  
