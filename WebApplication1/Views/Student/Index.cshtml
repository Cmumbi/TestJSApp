
@{

    ViewBag.Title = "Index";
}

<h2>Index</h2>

<br />

<button class="btnAdd" ng-click="addStudentDiv()">Add Student </button>
<br/>

<div ng-app="myapp">
    <div ng-controller="StudentCtrl">
        <table class="table table-striped table-bordered table-hover table-checkable datatable">
            <thead class="grid-top-panel">
                <tr>
                    <th>StudentID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Address</th>
                </tr>
            </thead>
            
                <tr ng-repeat="dataModel in students track by $index">
                    <td><a ng-click="editStudent(dataModel)">{{dataModel.StudentID}}</a></td>
                    <td>{{dataModel.FirstName}}</td>
                    <td>{{dataModel.LastName}}</td>
                    <td>{{dataModel.Email}}</td>
                    <td>{{dataModel.Address}}</td>
                </tr>
        </table>
        <div class="row">
            <div class="col-lg-12">
                <form>
                    <div class="form-group">
                        <label>Student Id</label>
                        <input class="form-control" disabled type="text"  ng-model="student.studentId" />
                    </div>
                    <div class="form-group">
                        <label>First Name</label>
                        <input class="form-control" type="text"  ng-model="student.firstName" />
                    </div>

                    <div class="form-group">
                        <label>Last Name</label>
                        <input class="form-control" type="text" ng-model="student.lastname"/>
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        <input class="form-control" type="text"   ng-model="student.email"/>
                    </div>

                    
                    <div class="form-group">
                        <label>Address</label><span class="text-default"><i>- Optional</i></span>  
                        <input class="form-control" type="text"   ng-model="student.address"/>
                    </div>


                    
                    <div class="form-group">
                        <input type="button" class="btn btn-primary" value="Save" ng-click="addStudent(student)" />
                    </div>


                </form>

            </div>
            <table>
     
   
    
                <tr>
                    <td colspan="2">
                    </td>
                </tr>
